	"id": "lonestar5-public",
	"description": "Public Lonestar6 execution system",
	"systemType": "LINUX",
	"host": "ls6.tacc.utexas.edu",
	"enabled": true,
	"effectiveUserId": "${apiUserId}",
	"defaultAuthnMethod": "PKI_KEYS",
	"rootDir": "/",
	"port": 22,
	"useProxy": false,
	"canExec": true,
	"canRunBatch": true,
	"mpiCmd": "string",
